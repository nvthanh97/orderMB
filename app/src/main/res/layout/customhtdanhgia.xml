<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"



    android:background="@drawable/shadow">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/uss"
            android:layout_height="50dp">

        </ImageView>
        <TextView
            android:id="@+id/tennguoidang"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginRight="150dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#0422C9"
            android:layout_width="match_parent"
            android:text="User"
            android:layout_height="50dp">

        </TextView>
        <ImageView
            android:id="@+id/diem"
            android:text="20/11/1997"
            android:layout_marginStart="-150dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingRight="0dp"
            android:src="@drawable/star"
            android:layout_gravity="bottom|center"
            android:textSize="18sp"
            android:textColor="@color/backgroundDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </LinearLayout>
    <TextView
        android:id="@+id/txtnoidung"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="Ná»™i dung"
        android:textColor="#071E9E"
        android:fontFamily="@font/montserrat_medium"

        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:id="@+id/imHinhDang"
        android:src="@drawable/addimage"
        android:padding="20dp"
        android:layout_width="410dp"
        android:layout_height="410dp">

    </ImageView>


</LinearLayout>
