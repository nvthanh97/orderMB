<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
    android:weightSum="10"
android:layout_height="match_parent"
android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bgxanh2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Thống kê"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="8dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/nen_tren"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/chonthang"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/size5dp"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:hint="Tháng"
            android:textColorHint="@color/colorGray"
            android:background="@drawable/shadow_new">

        </EditText>

        <TextView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text=" - "
            android:layout_height="match_parent">

        </TextView>
        <EditText
            android:id="@+id/chonnam"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textColorHint="@color/colorGray"
            android:layout_gravity="center|left"
            android:hint="Năm"
            android:textAlignment="center"
            android:background="@drawable/shadow_new">

        </EditText>

        <Button
            android:id="@+id/btnloc"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_margin="5dp"
            android:background="@android:drawable/ic_menu_search"
            android:layout_height="30dp">

        </Button>
    </LinearLayout>

    <ListView
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:layout_weight="9.6"
        android:id="@+id/listviewLSthanhtoan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rounded_blue_corner_top"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_height="190dp">
        <TextView
            android:id="@+id/txtdoanhthu"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text=""
            android:layout_height="wrap_content">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:id="@+id/bthomnay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/day" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="HÔM NAY"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnthangnay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/thang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="THÁNG NÀY"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/btnnamnay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/namicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="NĂM NAY"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/tong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="TẤT CẢ"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>




</LinearLayout>