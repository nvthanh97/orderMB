<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="90dp"
    android:weightSum="10"
    android:id="@+id/lltb"
    android:background="@drawable/shadow">



    <LinearLayout
        android:layout_weight="10"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:src="@drawable/speaking"
                    android:textSize="14sp" />
                <TextView
                    android:layout_weight="8"
                    android:id="@+id/ten"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="5dp"
                    android:text="Tiêu đề"
                    android:textColor="#0000FF"
                    android:textSize="14sp">

                </TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/ngaynhapmoinhat"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="left|center"
                    android:transformPivotX="0dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Ngày nhập"
                    android:textColor="#660099"
                    android:textSize="10sp">

                </TextView>



            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:src="@drawable/speaking"
                    android:textSize="15sp">

                </ImageView>

                <TextView
                    android:id="@+id/mota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:text="Mô tả"
                    android:fontFamily="@font/montserrat_medium"
                    android:textStyle="bold"
                    android:textColor="#1532D6"
                    android:textSize="14sp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/money"
                    android:textColor="#660099"
                    android:textSize="15sp">

                </ImageView>

                <TextView
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Tổng tiền đã nhập: "
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#BD5851"
                    android:textSize="12sp">

                </TextView>
                <TextView
                    android:id="@+id/tongtiendanhap"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#BD5851"
                    android:textSize="12sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/notebook"
                    android:textColor="#660099"
                    android:textSize="15sp">

                </ImageView>

                <TextView
                    android:id="@+id/conlai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#660099"
                    android:textSize="10sp">

                </TextView>

                <TextView
                    android:id="@+id/donvi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#660099"
                    android:textSize="10sp">

                </TextView>



            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/huyen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huyện"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:textColor="#660099"
                    android:textSize="10sp">

                </TextView>

                <TextView
                    android:id="@+id/tinh"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỉnh"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#660099"
                    android:textSize="10sp">
                </TextView>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
